<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical"
    android:background="@color/gbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_margin="30dp"
            android:src="@drawable/aemotion" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="15dp"
            android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="감정 카드를 통해 감정을 학습해봐요 "
                android:textSize="13sp"
                android:fontFamily="@font/font"
                android:textColor="@color/normal"/>
            <Button
                android:id="@+id/level1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1단계"
                android:textSize="16sp"
                android:fontFamily="@font/font"
                android:padding="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/gradiation_btn2"
                android:layout_margin="10dp"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:fontFamily="@font/font"
                        android:text="학습한 감정을 제대로 이해했는지 확인해봐요 "
                        android:textSize="13sp"
                        android:textColor="@color/normal"/>
                    <Button
                        android:id="@+id/level2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2단계"
                        android:fontFamily="@font/font"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:textStyle="bold"

                        android:textColor="@color/white"
                        android:background="@drawable/gradiation_btn2"
                        android:layout_margin="10dp"/>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:fontFamily="@font/font"
                            android:text="감정과 알맞은 표정을 지어봐요 "
                            android:textSize="13sp"
                            android:textColor="@color/normal"/>
                        <Button
                            android:id="@+id/level3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3단계"
                            android:textStyle="bold"
                            android:fontFamily="@font/font"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:padding="18dp"
                            android:background="@drawable/gradiation_btn2"
                            android:layout_margin="10dp" />
                    </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:text="ⓒ 2022. 박지연,이경원 all rights reserved."
            android:textSize="14sp"
            android:textAlignment="center"
            android:id="@+id/signupText"
            android:layout_marginTop="50dp"
            android:textColor="#B96BC6"/>
        <com.sackcentury.shinebuttonlib.ShineButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:id="@+id/star1"
            app:siShape="@raw/star"/>
        <ImageView
            android:id="@+id/test"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />
    </LinearLayout>
</LinearLayout>